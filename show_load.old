#######################################################
#######################################################
#
# show_load
#  (sjt)
#   list server load for a specific server or all
#
#   SYNTAX:  show_load [ -all | -h <host> ]
#
#   FLAGS:
#	-h "<hostlist>"
#     -all all hosts as defined by $ALLHOSTS
#
#  examples
#	show_load -h awnjpoda01-pub
#	show_load -all
#
#   CREATED: 9/15/2016
#
#######################################################
#######################################################

HOSTLIST=`hostname`

######################################################

while [ $# -ge 1 ];do

  opt=$1
  shift

  case $opt in
     -h) HOSTLIST="$1"; shift ;;
   -all) HOSTLIST=$ALLHOSTS ;;
      *) echo "I don't know what $opt is...\n" ; exit 2;;
  esac

done

######################################################

for hst in $HOSTLIST
do
  echo -e "$hst \c" 
  ssh $hst "w | head -1"
done

