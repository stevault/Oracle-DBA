
DB=$ORACLE_SID

if [ $# -lt 1 ]; then
   echo "ERROR: missing parameter."
   echo "SYNTAX: $0 <username>"
   exit 2
fi

USR=$1 
shift

while [ $# -ge 1 ];do

  opt=$1
  shift
  case $opt in
     -d) DB=$1; shift ;;
      *) echo "I don't know what $opt is...\n" ; exit 2;;
  esac

done

echo "

