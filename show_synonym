DB=$ORACLE_SID

SYN=$1
shift

######################################################

while [ $# -ge 1 ];do

  opt=$1
  shift

  case $opt in
     -d) DB=$1; shift ;;
      *) echo "I don't know what $opt is...\n" ; exit 2;;
  esac

done

######################################################



echo "

col owner format a15
col db_link format a15

select * from dba_synonyms 
where synonym_name = upper('$SYN');

" | sqlplus -s $SYSCONN@$DB
